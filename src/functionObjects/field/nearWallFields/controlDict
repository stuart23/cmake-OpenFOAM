FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.005;

writeControl    timeStep;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{
    near
    {
        // Where to load it from
        libs ("libfieldFunctionObjects.so");

        type nearWallFields;

        // Output every
        writeControl writeTime; //timeStep;
        //writeInterval 5;

        // Fields to be sampled. Per field original name and mapped field to
        // create.
        // Note: fields only get updated when writing!
        fields
        (
            (p pNear)
            (U UNear)
        );

        // Patches to sample (regular expressions)
        patches ("movingWall");

        // Distance to sample
        distance 0.009;
    }
}


// ************************************************************************* //
